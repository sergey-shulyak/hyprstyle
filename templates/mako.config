# Mako notification daemon config - auto-generated by hyprstyle
# Generated: $(date)

# General
max-history=100
sort=-time
default-timeout=3000

# Styling
width=500
height=150
margin=20,20

background-color=${BG}80
text-color=${TEXT}
border-color=${SECONDARY}66
border-size=2
padding=12
border-radius=10
font=JetBrains Mono 12
format=<b>%s</b>\n%b

# Progress bar
progress-color=over ${ACCENT}

# Low priority notifications
[urgency=low]
background-color=${BG}80
text-color=${TEXT}
border-color=${SECONDARY}66

# Normal priority notifications
[urgency=normal]
background-color=${BG}80
text-color=${TEXT}
border-color=${SECONDARY}66

# Critical priority notifications
[urgency=critical]
background-color=${BG}80
text-color=${ERROR}
border-color=${ERROR}66
